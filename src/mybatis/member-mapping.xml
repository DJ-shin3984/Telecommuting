<mapper namespace="my.memberMapper">
	
	<select id="checklogin" parameterType="MemberDTO" resultType="MemberDTO">
		<![CDATA[
			SELECT * FROM MEMBER WHERE M_ID=#{m_id} AND M_PW=#{m_pw}
 		]]>
	</select>
	
	<insert id="onTime" parameterType="MemberDTO">
		<![CDATA[
			INSERT INTO ATTENDANCE VALUES(SQ_AIDX.NEXTVAL,SYSDATE,SYSDATE,#{a_place_lat},#{a_place_lon},#{m_idx})
 		]]>
	</insert>
	
